{
  "manifest_version": 3,
  "name": "Bookmark Manager Pro",
  "version": "1.0",
  "description": "Save and manage your bookmarks efficiently.",
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  },
  "permissions": [
    "bookmarks",
    "tabs",
    "scripting",
    "downloads",
    "activeTab"
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://*"
  },
  "host_permissions": [
    "<all_urls>"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon.png",
      "48": "icon.png",
      "128": "icon.png"
    },
    "default_width": 450,
    "default_height": 700
  }
}